# Default .bash_profile
# Users are encouraged to edit this file to meet their needs.
# History
# 20151207 lof load module PrgEnv-intel
# 20151103 onn Initial version
#************************************************************************

# Execute .bashrc if the file exists (typically contains aliases and functions)
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# The following example illustrates how to extend your path
# to add additional libraries and executables to your shell default path
#export PATH=${PATH}:/usr/local/bin:/usr/local/pkg/ferret/ferret-6.4/bin

# set for invoking ksh to give access to modules
export ENV=$HOME/.kshrc

# check if this is an interactive session
/usr/bin/tty -s
if [ 0 = $? ]; then

  # Setup prompt appearance
  host=`uname -n`
  PS1="$host % "
  export PS1
fi

export EDITOR=/usr/bin/vim

# Umask 'masks off' default permission bits.
umask 077

export HISTSIZE=1000

# Add your commands here to extend your PATH, etc.

module purge
module load PrgEnv-intel
module load cmake/2.8.12.2
module load cdo/1.7.0
module load gsl/1.16
module load hdf5-parallel/1.8.15p1.intel-2016
module load netcdf-parallel/4.3.3.1-parallel.intel-2016
module load parallel-netcdf/1.6.1.intel-2016
module load proj/4.9.2RC2
module load slurm

export PETSC_DIR=~/petsc-maint
export PETSC_ARCH=linux-64bit
export LOCAL_LIB_DIR=$HOME/local

alias al='alias'
alias cls='clear'
alias hi='history'
alias la='ls -a'
alias ll='ls -lg'
alias lh='ls -lh'
alias ncv='ncview -minmax all'
alias nch='ncdump -h'
alias em='emacs -nw -Q'

PATH=$PATH:$HOME/pism/bin:$HOME/pism/util:$HOME/bin:$HOME/local/bin			# Add private commands to PATH

# list currently loaded modules
module list

export PISM_PREFIX=~/pism/bin/
export PISM_DO=echo
export PISM_MPIDO='mpirun -np'

echo 'PETSC_DIR = ' ${PETSC_DIR}
echo 'PETSC_ARCH = ' ${PETSC_ARCH}
echo 'PATH = ' ${PATH}
